@model List<EShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

@* With @ you may write C# within HTML and with @: you may write HTML within C#. *@
<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new Product</a>
    </div>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }
            <div class="card mr-2" style="width: 18rem;">
                <img class="card-img-top w-100 h-100" src="@item.ProductImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.ProductDescription</p>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary">Edit</a>
                    <a href="/Products/AddToCart?ProductId=@item.ProductId&cartId=1" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
